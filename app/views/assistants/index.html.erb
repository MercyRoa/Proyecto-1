<h1>Listing assistants</h1>

<table style="border:1px solid red;" border="1">
  <tr>
    <th>Name</th>
    <th>Twitter username</th>
    <th>Phone</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @assistants.each do |assistant| %>
  <tr>
    <td><%= assistant.name %></td>
    <td><%= assistant.twitter_username %></td>
    <td><%= assistant.phone %></td>

    <td><%= link_to 'Show', assistant %></td>
    <td><%= link_to 'Edit', edit_assistant_path(assistant) %></td>
    <td><%= link_to 'Destroy', assistant, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>


</table>

